#include<stdio.h>
int main()
{
	char op;
	int a,b,c;
	printf("Enter an operator (+,-,*,/):");
	scanf("%c",&op);
	printf("Enter the numbers");
	scanf("%d%d",&a,&b);
	switch(op)
	{
		case '+': c=a+b;
			printf("%d+%d=%d",a,b,c);
		break;	
		case '-':c=a-b;
		    printf("%d-%d=%d",a,b,c);
		break;	 
		case '*':c=a*b;
			printf("%d*%d=%d",a,b,c);
		break;		
		case '/':c=a/b;
			printf("%d/%d=%d",a,b,c);
		break;					
	default :
		printf("Error!The operator is not correct");
    }
}
